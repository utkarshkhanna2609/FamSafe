<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:id="@+id/add"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:elevation="108dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="H.No-86, First Floor, Shivpuri, Geeta Colony, Delhi-110051, India, Delhi-110051, India, Delhi-110051, India"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/card" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="20dp"
        android:elevation="68dp"
        android:src="@drawable/human"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@id/card" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="108dp"
        android:paddingLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/profile"
        app:layout_constraintTop_toBottomOf="@id/profile">


        <ImageView
            android:id="@+id/wifi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:src="@drawable/ic_baseline_wifi_24"
            app:layout_constraintStart_toEndOf="@id/battery_text"
            app:layout_constraintTop_toBottomOf="@id/profile" />

        <ImageView
            android:id="@+id/battery_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:src="@drawable/batt"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintTop_toBottomOf="@id/profile" />

        <TextView
            android:id="@+id/battery_text"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="4dp"
            android:text="90%"
            android:textColor="#57BA50"
            app:layout_constraintStart_toEndOf="@+id/battery_icon"
            app:layout_constraintTop_toBottomOf="@id/profile" />

        <ImageView
            android:id="@+id/location_symbol"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintStart_toEndOf="@id/wifi"
            app:layout_constraintTop_toBottomOf="@id/add" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:padding="1dp"
            android:text="111.0"
            app:layout_constraintStart_toEndOf="@id/location_symbol"
            app:layout_constraintTop_toBottomOf="@id/add" />

        <TextView
            android:id="@+id/distance_km"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:elevation="108dp"
            android:padding="1dp"
            android:text="KM"
            app:layout_constraintStart_toEndOf="@id/distance_text"
            app:layout_constraintTop_toBottomOf="@id/add" />

        <ImageView

            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_circle"
            android:elevation="108dp"
            android:src="@drawable/call"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/add" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView

        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F6D368"
        app:cardCornerRadius="32dp"
        app:cardElevation="64dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="Utkarsh Khanna"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>