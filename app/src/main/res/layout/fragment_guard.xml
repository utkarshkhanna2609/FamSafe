<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/material_dynamic_neutral50"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SECURITY"
        android:textColor="@color/black"
        android:elevation="80dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lilac_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#b1a9bd"
        app:cardCornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:cardElevation="64dp">


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        app:layout_constraintEnd_toEndOf="@+id/lilac_card"
        android:elevation="84dp"
        app:layout_constraintTop_toTopOf="@+id/lilac_card"
        app:layout_constraintBottom_toBottomOf="@+id/lilac_card"
        android:src="@drawable/sosimage"
        android:layout_margin="20dp"
        android:layout_width="96dp"
        android:id="@+id/sos_img"
        android:layout_height="96dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textStyle="bold"
        android:id="@+id/sos_text"
        android:layout_margin="20dp"
        android:textColor="#FFFF"
        android:textSize="28sp"
        android:elevation="84dp"
        app:layout_constraintStart_toStartOf="@+id/lilac_card"
        app:layout_constraintTop_toTopOf="@id/lilac_card"/>

    <TextView
        android:id="@+id/sos_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="84dp"
        android:fontFamily="sans-serif-black"
        android:text="In case of any emergency, send alert to family and ask them to keep contacting me"
        app:layout_constraintEnd_toStartOf="@id/sos_img"
        app:layout_constraintStart_toStartOf="@+id/lilac_card"
        app:layout_constraintTop_toBottomOf="@+id/sos_text" />

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/red_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FF7474"
        app:cardCornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lilac_card"
        app:cardElevation="64dp">

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARD"
        android:textStyle="bold"
        android:id="@+id/guard_text"
        android:layout_margin="20dp"
        android:textColor="#FFFF"
        android:textSize="28sp"
        android:elevation="84dp"
        app:layout_constraintStart_toStartOf="@+id/red_card"
        app:layout_constraintTop_toTopOf="@id/red_card"/>

    <TextView
        android:id="@+id/guard_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="84dp"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Open when you are in potential danger of any sort."
        app:layout_constraintStart_toStartOf="@+id/red_card"
        app:layout_constraintEnd_toStartOf="@id/cyber_img"
        app:layout_constraintTop_toBottomOf="@+id/guard_text"
        />
    <ImageView

        app:layout_constraintEnd_toEndOf="@+id/red_card"
        android:elevation="84dp"
        app:layout_constraintTop_toTopOf="@+id/red_card"
        app:layout_constraintBottom_toBottomOf="@+id/red_card"
        android:src="@drawable/cyber"
        android:layout_margin="20dp"
        android:layout_width="96dp"
        android:id="@+id/cyber_img"
        android:layout_height="96dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>